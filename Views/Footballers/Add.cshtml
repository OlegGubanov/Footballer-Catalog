@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using Footballer_Catalog.Models
@model Footballer_Catalog.Models.Footballer

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>Добавление игрока</title>
    @Html.ActionLink("К списку игроков", "Index", "Home")
</head>
<body>
<form asp-action="Add" asp-controller="Footballers" method="post">
    <div>
        <label asp-for="Name">Имя</label>
        <input type="text" asp-for="Name" autocomplete="off" required/>
    </div>
    <div>
        <label asp-for="Surname">Фамилия</label>
        <input type="text" asp-for="Surname" autocomplete="off" required/>
    </div>
    <div>
        <label asp-for="Gender" class="control-label">Пол</label>
        @Html.DropDownList("Gender", Html.GetEnumSelectList(typeof(Gender)), "Пол")
    </div>
    <div>
        <label asp-for="Birthdate">Дата рождения</label>
        <input type="date" asp-for="Birthdate" class="form control"/>
    </div>
    <div>
        <label asp-for="Team.Name">Команда</label>
        <input type="text" asp-for="Team.Name" list="teams" autocomplete="off" required/>
        <datalist id="teams">
            @foreach (var team in ViewBag.Teams)
                {
                    <option>@team</option>
                }
        </datalist>
    </div>
    <div>
        <label asp-for="Country">Страна</label>
        @Html.DropDownList("Country", Html.GetEnumSelectList(typeof(Country)), "Страна")
    </div>
    <div class="form-group">
        <input type="submit" value="Добавить игрока"/>
    </div>
</form>
</body>
</html>