@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using Footballer_Catalog.Models
@model Footballer_Catalog.Models.Footballer

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Редактирование</title>
    @Html.ActionLink("К списку игроков", "Index")
</head>
<body>
<form asp-action="edit" asp-controller="home" asp-route-id="@Model.Id">
    <div class="form-group">
        <label asp-for="Name" class="control-label">Имя</label>
        <input type="text" id="Name" name="Name" asp-for="Name" class="form control" value="@Model.Name" required/>
    </div>
    <div class="form-group">
        <label asp-for="Surname" class="control-label">Фамилия</label>
        <input type="text" id="Surname" name="Surname" asp-for="Surname" class="form control" value="@Model.Surname" required/>
    </div>
    <div class="form-group">
        <label asp-for="Gender" class="control-label">Пол</label>
        @Html.DropDownList("Gender", Html.GetEnumSelectList(typeof(Gender)), "Пол", new { @value = @Model.Gender, @id = "Gender" })
    </div>
    <div class="form-group">
        <label asp-for="Birthdate" class="control-label">Дата рождения</label>
        <input type="date" id="Birthdate" name="Birthdate" asp-for="Birthdate" class="form control" value="@Model.Birthdate.ToString("yyyy-MM-dd")"/>
    </div>
    <div class="form-group">
        <label asp-for="Team" class="control-label">Команда</label>
        <input type="text" name="Team" asp-for="Team" class="form control" list="teams" required/>
        <datalist id="teams"></datalist>
        <script>
            let list = document.getElementById('teams')
            let teams = @Html.Raw(Json.Serialize(ViewBag.Teams))
            teams.forEach(function (team) {
                let option = document.createElement('option')
                option.value = team
                list.appendChild(option)
            })
        </script>
    </div>
    <div class="form-group">
        <label asp-for="Country" class="control-label">Страна</label>
        @Html.DropDownList("Country", Html.GetEnumSelectList(typeof(Country)), "Страна", new { @value = @Model.Country, @id = "Country" })
    </div>
    <div class="form-group">
        <input type="submit" value="Изменить данные" id="sendBtn"/>
    </div>
</form>
</body>
</html>